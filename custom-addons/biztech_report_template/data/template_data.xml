<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="report.fonts" id="report_fonts_helvetica">
        <field name="name">Helvetica</field>
        <field name="family">Helvetica</field>
        <field name="path">/dev/null</field>
        <field name="mode">all</field>
    </record>
    <record model="report.fonts" id="report_fonts_times">
        <field name="name">Times</field>
        <field name="family">Times</field>
        <field name="path">/dev/null</field>
        <field name="mode">all</field>
    </record>
    <record model="report.fonts" id="report_fonts_courier">
        <field name="name">Courier</field>
        <field name="family">Courier</field>
        <field name="path">/dev/null</field>
        <field name="mode">all</field>
    </record>

    <record id="base.main_company" model="res.company">
        <field name="font_id" ref="report_fonts_helvetica"/>
    </record>

    <record model="report.extra.content" id="report_extra_content_invoice">
        <field name="model_id" ref="account.model_account_move"/>
    </record>

</odoo>