<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
    
        <record id="oo_freight_order_report_form" model="ir.ui.view">
            <field name="name">Freight Order Report</field>
            <field name="model">freight.order.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                    </group>
                    <footer>
                        <button string="Generate Report (.xlsx)" name="generate_freight_order_report" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="oo_freight_order_report_form_action" model="ir.actions.act_window">
            <field name="name">Freight Order Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.order.report</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="oo_freight_order_report_form" />
            <field name="binding_model_id" ref="model_freight_order"/>
            <field name="target">new</field>
        </record>

        <record id="wizard_excel_report_form" model="ir.ui.view">
            <field name="name">Download Report</field>
            <field name="model">excel.wizard</field>
            <field name="arch" type="xml">
                <form string="Excel Report">
                    <sheet>
                        <group>
                            <field name="name" invisible="1" />
                            <field name="report" readonly="1" filename="name" />
                        </group>
                    </sheet>
                    <footer>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="menu_freight_order_report" name="Reporting" parent="menu_freight_root" sequence="3"/>

        <menuitem id="oo_freight_order_report_menu" name="Freight Order Report" parent="menu_freight_order_report" action="oo_freight_order_report_form_action" sequence="30" />

    </data>
</odoo>
