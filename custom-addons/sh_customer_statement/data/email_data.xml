	<record id="sh_send_customer_filter_whatsapp_email_template" model="mail.template">
            <field name="name">Statement By Whatsapp: Send by email</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="email_from">${object.create_uid.email_formatted |safe}</field>
            <field name="partner_to">${object.id}</field>
            <field name="subject">${object.company_id.name} (Customer Statement By Date)</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <div style="list-style-type: none;">
							Dear ${object.name} ,%0A%0A
							Here is the your account statement From ${object.start_date} To ${object.end_date} *${object.company_id.name}* %0A%0A 
                            <br />
                            % if object.company_id.sh_statement_pdf_in_message:
                            <span style="list-style-type: none;">*Click here to download statement* %20 :${object.sh_cfs_statement_report_url} %0A%0A</span>
                            % endif
                            <br />
                            % if object.company_id.sh_statement_url_in_message:
                            <span style="list-style-type: none;">*Click here to See Statement History* %20 :${object.portal_statement_url_wp} %0A%0A</span>
                            % endif
                            <span style="list-style-type: none;">Let me know if any concern.%0A</span>
                            <span style="list-style-type: none;">Thank You.%0A</span>
                            % if object.company_id.sh_statement_signature and object.env.user.sh_company_sign :
                            <span style="list-style-type: none;">*${object.env.user.sh_company_sign}* %0A%0A</span>
                            % endif
                        </div>
                    </p>
                </div>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="False" />
        </record>
