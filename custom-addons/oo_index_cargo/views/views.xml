<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.move inherit form view -->
    <record id="oo_index_view_move_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="po_number" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                <field name="reference_number" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
            </xpath>
        </field>
    </record>

    <!-- view_order_form inherit form view -->
    <record id="oo_index_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='note']" position="before">
                <field name="order_note"/>
            </xpath>
        </field>
    </record>
</odoo>