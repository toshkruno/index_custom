<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="approval_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">approval.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@id='draft_confirm']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="is_quotation" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                </xpath>
                <xpath expr="//button[@id='bid_confirm']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_quotation', '=', False), ('state', 'not in', ['sent'])]}</attribute>
                    <attribute name="states"></attribute>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>